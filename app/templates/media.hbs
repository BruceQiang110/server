<aside id="sidebar">

	<details class="box" open>
		<summary>Filter</summary>
		<table class="filter">

			<tr>
				<td>Dates:</td>
				<td>
					<select>
						<option selected>All</option>
						<option>September 2015</option>
						<option>October 2015</option>
					</select>
				</td>
			</tr>

			<tr>
				<td>File type:</td>
				<td>
					<select>
						<option selected>All</option>
						<option>Image</option>
						<option>Video</option>
						<option>Document</option>
						<option>Audio</option>
					</select>
				</td>
			</tr>

		</table>
	</details>

</aside>

<ul id="files">

	{{#each model as |file|}}

	<li>
		<a href="#">
			<img src={{file.url}}>
		</a>
	</li>

	{{/each}}

</ul>
